{% extends "base.twig" %}

{% block title %}{{ title }}{% endblock %}

{% block menu %}
    <div id="menu" class="menu">
        <ul>
            {% for name, href in content.menu %}
                <li><a href="{{ href }}">{{ name }}</a></li>
            {% endfor %}

        </ul>
    </div>
{% endblock %}
{% block cart %}
    <div class="cart"><a href="index.php?c=cart&act=cart">Корзина</a></div>
{% endblock %}
{% block content %}
    <div id="content">
        <h3>Форма авторизации</h3>
        <p style="color: red">{{ content.message }}</p>
        <form method="post" action="index.php?c=user&act=auth" class="formAuth">
            <input type="text" name="login" value="{{ content.login }}" placeholder="email">
            <input type="password" name="password" value="{{ content.password }}" placeholder="пароль">
            <input type="submit">
        </form>
    </div>
{% endblock %}
